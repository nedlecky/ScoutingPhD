LIBRARY ieee;
USE ieee.std_logic_1164.ALL;
USE ieee.std_logic_arith.ALL;
USE ieee.std_logic_unsigned.ALL;

ENTITY rippleadd4 IS
	PORT
	(
		x,y	: IN	STD_LOGIC_VECTOR(3 downto 0);
		s	: OUT	STD_LOGIC_VECTOR(4 downto 0);
	);
	
END ha;

ARCHITECTURE arch OF ha IS
BEGIN
	s <= x xor y;
	c <= x and y;
END arch;

